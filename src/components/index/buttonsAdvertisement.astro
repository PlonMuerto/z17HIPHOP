---
const {advertisement} = Astro.props

---


<section class="buttonsAds">
    {
    advertisement.length
    ?
        advertisement.map(
            (a:{title:string,description:string,icon:string})=>
                <div class="btnAdvertisement">
                    <i class="material-icons  center icons">{a.icon}</i>
                    <h4 class="subtitle">{a.title}</h4>
                    <p class="description">{a.description}</p>
                </div>
            )
    :
    null}
</section>

<style>
    .buttonsAds{
		width: 100%;
		padding: 30px;
		display:grid;
		grid-gap: 30px;
		grid-template-columns: 1fr;
		align-items: center;
		align-content: center;
		grid-template-rows: repeat(6,1fr);
		box-sizing: border-box;
	}

	@media (min-width:675px) {
		.buttonsAds{
			
			grid-template-rows: repeat(3,1fr);
			grid-template-columns: 1fr 1fr;
		}
	}

	@media (min-width:1100px) {
		.buttonsAds{

			grid-template-rows: repeat(1,1fr);
			grid-template-columns: 1fr 1fr 1fr;
		}
	}
    /*-----------------------------------------------------------------*/

    .btnAdvertisement{
        width: 100%;
        height: 140px;
        border-radius: 10px;
        padding: 15px;
        box-sizing: border-box;
        display: flex;
        background-color: var(--color-background-cards-dark);
        justify-content: stretch;
        align-items: stretch;
        flex-wrap: wrap;
        box-shadow:inset -2px -2px 1px var(--color-silver), inset 2px 2px 3px var(--color-grey);
        transition: transform .1s linear ;
        &:hover{
            cursor: pointer;
            transform:scale(1.01);
        }
    }
    .btnAdvertisement .icons{
        font-size: 33px;
        margin: 0;
        display: inline-block;
        color: var(--color-yellow);
    }
    .btnAdvertisement .subtitle{
        width: calc(100% - 33px);
        margin: 0;
        display: flex;
        padding: 0;
        font-size: 20pt;
        box-sizing: border-box;
        align-items: stretch;
        justify-content: stretch;
        padding-left: 10px;
        display: inline-flex;
        font-family: "Inter";
        color:var(--color-yellow-opacite);
        box-sizing: border-box;
    }
    .btnAdvertisement .description{
        width: 100%;
        padding: 5px ;
        box-sizing: border-box;
        font-weight: 400;
        font-size: 13pt;
        line-height: 24px;
        color: var(--color-white);
        margin: 0;
        font-family: "Roboto";
    }

    @media(max-width:950px){
        .btnAdvertisement{
            height: 160px;
        }
        .btnAdvertisement .icons{
            font-size: 27px;
        }
        .btnAdvertisement .subtitle{
            width: calc(100% - 27px);
            font-size: 18pt;
        }
        .btnAdvertisement .description{
            margin: 0;
            font-size: 15pt;
        }
    }

    @media(max-width:675px){
        .btnAdvertisement{
            height: auto;
        }
        .btnAdvertisement .icons{
            font-size: 27px;
        
        }
        .btnAdvertisement .subtitle{
            width: calc(100% - 27px);
            font-size: 16pt;
            margin-bottom: 10px;
            letter-spacing: 2px;
        }
        .btnAdvertisement .description{

            font-size: 15pt;
            letter-spacing: 1.5px;
        }
    }
</style>