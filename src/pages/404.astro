---
//componentes
import Layout from '../layouts/layout.astro';
import NewProspects from '../components/index/newProspects.astro';
import Collaborators from "../components/index/collaborators.astro";
import WelcomeHome from '../components/index/welcomeHome.astro';

//datos

---
<Layout pageTitle="404" pageDescription="Pagina no encontrada">
	<main class="NotFoundPage">
		
		<svg width="100%" height="100%" viewBox="0 0 800 600"
			xmlns="http://www.w3.org/2000/svg"
			style="background:#000; font-family:'Inter', sans-serif;">
			<style>
				.vinyl {
				animation: spin 14s linear infinite;
				transform-origin: center;
				filter: drop-shadow(0 0 6px #1a1a1a);
				}

				.big-text {
				animation: fadeInZoom 1s ease-out forwards;
				opacity: 0;
				}

				@keyframes spin {
				from { transform: rotate(0deg); }
				to { transform: rotate(360deg); }
				}

				@keyframes fadeInZoom {
				0% { transform: scale(0.8); opacity: 0; }
				100% { transform: scale(1); opacity: 1; }
				}

				.spray-line {
				stroke-dasharray: 2 6;
				animation: dashPulse 2s linear infinite;
				}

				@keyframes dashPulse {
				0% { stroke-dashoffset: 0; }
				100% { stroke-dashoffset: -20; }
				}
			</style>

		<rect width="100%" height="100%" fill="#000"/>

		

		<!-- 404 animado -->
		<text x="50%" y="43%" text-anchor="middle" font-size="140px" fill="#facc15"
				font-weight="900" letter-spacing="10" class="big-text" style="text-transform: uppercase;">
			404
		</text>

		<!-- Subtítulo -->
		<text x="50%" y="56%" text-anchor="middle" font-size="22px" fill="#cccccc" font-weight="600">
			PÁGINA NO ENCONTRADA
		</text>

		<!-- Línea decorativa tipo spray -->
		<line x1="25%" y1="62%" x2="75%" y2="62%"
				stroke="#444" stroke-width="1.5" class="spray-line"/>

		<!-- Frase urbana -->
		<text x="50%" y="69%" text-anchor="middle" font-size="14px" fill="#888" font-style="italic" opacity="0.85">
			
		</text>
		</svg>


	</main>
</Layout>

<style>
	
	.NotFoundPage{
		display: flex;
		flex-direction: column;
		align-items: center;
		
	}
	
</style>
