---
import FiltersMusic from '../components/music/filtersMusic.astro';
import InitText from '../components/music/initText.astro';
import MusicReproductor from '../components/music/musicReproductor.astro';
import Layout from '../layouts/layout.astro';
---
<Layout pageTitle="Musica">
    <main class="musicPage">
        <section class="initMusicPage">
			<InitText />
			<FiltersMusic/>
			<div class="musicIntro">
				
				<figure>
					<img src="/musicPage.png" />
				</figure>
			</div>
		</section>
    </main>
</Layout>

<style>
	.musicPage{
		width: 100%;
		padding: 0px;
		box-sizing: border-box;
		display: flex;
		flex-direction: column;
		background-color: #ededed;
	
	}
	.musicPage .initMusicPage{
		width: 100%;
		padding: 0px;
		box-sizing: border-box;
		position: relative;
		height: 100%;
		margin:0;
		display: flex;
		flex-wrap: wrap;
		justify-content: center;	
		overflow: hidden;
		background: black;
		animation: flicker 0.1s infinite alternate;
	}
	
	.musicPage .initMusicPage .musicIntro{
		width: 100%;
		height: auto;
		padding: 0px;
		margin: 0px;
		box-sizing: border-box;
		position: relative;
		z-index: 1;
		
	}

	.musicPage .initMusicPage .musicIntro::before{
		content: "";
		position: absolute;
		width: calc(100% + 9%);
		height: calc(100% + 9%);
		top: -8%;
		left: -8%;
		background: repeating-linear-gradient(
			45deg,
			rgba(94, 94, 94, 0.9) 0px,
			rgba(2, 31, 49, 0.1) 3px,
			rgba(0, 0, 0, 0.1) 6px
		),repeating-linear-gradient(
			0deg,
			rgba(90, 90, 90, 0.3) 0px,
			rgba(2, 31, 49, 0.9) 3px,
			rgba(0, 0, 0, 0.3) 6px
		),
		repeating-linear-gradient(
			210deg,
			rgba(4, 59, 94, 0.2) 0px,
			rgba(2, 31, 49, 0.9) 3px,
			rgba(0, 0, 0, 0.2) 6px
		);
		animation: static-effect 0.2s infinite linear,noise .2s infinite linear;
		transform-origin: center;
	}


	@keyframes static-effect {
		0% { transform: translateY(0); }
		100% { transform: translateY(-4px); }
	}

	@keyframes noise {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(-10%);
      }
    }

	@keyframes move {
      0% {
        transform: translate(-10%, -10%) scale(1);
      }
      100% {
        transform: translate(10%, 10%) scale(1.05);
      }
    }

	.musicPage .initMusicPage .musicIntro figure{
		width: 100%;
		height: 100%;
		box-sizing: border-box;
		
		filter: saturate(0);
		padding: 0%;
		margin: 0;
		opacity: .5;
	}

	
	.musicPage .initMusicPage .musicIntro figure img{
		width: 100%;
		height: 100%;
		margin: 0;
		padding: 0;
		
	}


    

    @keyframes flicker {
      0% {
        background-color: black;
      }
      100% {
        background-color: #050505;
      }
    }

    @keyframes noise {
      0% {
        transform: translate(0, 0);
      }
      100% {
        transform: translate(10px ,20px);
      }
    }

</style>
